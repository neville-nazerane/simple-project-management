@model ProjectTaskAddDisplay

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<h4>@Model.ProjectTitle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data.Title" class="control-label"></label>
                <input asp-for="Data.Title" class="form-control" />
                <span asp-validation-for="Data.Title" class="text-danger"></span>
            </div>
            <input asp-for="Data.ProjectId" type="hidden" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Data.IsCompleted" /> @Html.DisplayNameFor(model => model.Data.IsCompleted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Data.DeadLine" class="control-label"></label>
                <input asp-for="Data.DeadLine" class="form-control" />
                <span asp-validation-for="Data.DeadLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
